class Solution(object):
    def removeKdigits(self, num, k):
        """
        :type num: str
        :type k: int
        :rtype: str
        """
        # if len(num) == k:
        #     return '0'


        stack = []
        
        # micro
        remain = len(num) - k
        for n in num:
            while stack and k and stack[-1] > n:
                stack.pop()
                k-=1

            stack.append(n)
        
        return ''.join(stack[:remain]).lstrip('0') or '0'
